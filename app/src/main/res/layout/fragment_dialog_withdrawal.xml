<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp"
        android:background="@drawable/bg_dialog_white_round">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_horizontal"
            android:text="@string/dialog_withdrawal_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:contentDescription="@string/dialog_withdrawal_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />

        <LinearLayout
            android:id="@+id/tv_dialog_subtitle_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title">

            <TextView
                android:id="@+id/tv_dialog_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_withdrawal_subtitle"
                android:textColor="@color/G500"
                android:textSize="12sp"
                android:textStyle="normal"
                android:contentDescription="@string/dialog_withdrawal_subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title" />

            <ImageView
                android:id="@+id/iv_cry_emoji"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_cry_emoji"
                android:contentDescription="@string/dialog_withdrawal_subtitle_emoji"
                app:layout_constraintStart_toEndOf="@+id/tv_dialog_subtitle"
                app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_btn_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_subtitle_section">

            <TextView
                android:id="@+id/tv_dialog_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_gray_stroke_round"
                android:gravity="center"
                android:layout_marginRight="6dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                android:text="@string/dialog_withdrawal_cancel_btn"
                android:textColor="@color/G400"
                android:textSize="14sp"
                android:textStyle="bold"
                android:contentDescription="@string/dialog_withdrawal_cancel_btn"
                app:layout_constraintWidth_percent="0.47"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_dialog_withdrawal_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_dialog_red_round"
                android:gravity="center"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                android:text="@string/dialog_withdrawal_ok_btn"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:contentDescription="@string/dialog_withdrawal_ok_btn"
                app:layout_constraintWidth_percent="0.47"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_dialog_cancel_btn"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>