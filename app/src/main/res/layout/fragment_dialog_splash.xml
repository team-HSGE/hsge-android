<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp"
        android:background="@drawable/bg_dialog_white_round">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_horizontal"
            android:text="@string/dialog_splash_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:contentDescription="@string/dialog_splash_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />

        <TextView
            android:id="@+id/tv_dialog_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_horizontal"
            android:text="@string/dialog_splash_subtitle"
            android:textColor="@color/G500"
            android:textSize="12sp"
            android:textStyle="normal"
            android:contentDescription="@string/dialog_splash_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title" />

        <TextView
            android:id="@+id/tv_dialog_ok_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_dialog_yellow_round"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:text="@string/dialog_splash_ok_btn"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:contentDescription="@string/dialog_splash_ok_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_subtitle"
            app:layout_constraintWidth_percent="0.47" />





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>